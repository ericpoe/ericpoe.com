---
import type { ImageMetadata } from 'astro';
import { siteMetadata } from '../data/siteMetadata';

type MaybeImage = ImageMetadata | string | undefined;

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  pathname?: string;
  articleImage?: MaybeImage;
  articleImageAlt?: string;
  articleCreatedAt?: string;
  articleUpdatedAt?: string;
  type?: 'website' | 'article';
}

const {
  title = siteMetadata.title,
  description = siteMetadata.description,
  keywords = '',
  pathname = '/',
  articleImage,
  articleImageAlt,
  articleCreatedAt = '',
  articleUpdatedAt = '',
  type = 'website',
}: Props = Astro.props;

const url = new URL(pathname, siteMetadata.siteUrl).toString();
const imagePath =
  typeof articleImage === 'string'
    ? articleImage
    : articleImage && 'src' in articleImage
      ? articleImage.src
      : siteMetadata.image;
const image = new URL(imagePath, siteMetadata.siteUrl).toString();
const imageAlt = articleImageAlt ?? title;
---

<title>{title}</title>
<meta name="description" content={description} />
<meta name="locale" property="og:locale" content="en_US" />
<meta name="title" property="og:title" content={title} />
<meta name="description" property="og:description" content={description} />
<meta name="url" property="og:url" content={url} />
<meta name="image" property="og:image" content={image} />
<meta name="og:image:alt" content={imageAlt} />
<meta name="keywords" property="og:article:tag" content={keywords} />
<meta name="publish_date" property="og:publish_date" content={articleCreatedAt} />
<meta name="author" property="og:author_name" content="Eric Poe" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:url" content={url} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={image} />
<meta name="twitter:image:alt" content={imageAlt} />
<meta name="twitter:creator" content={siteMetadata.twitterUsername} />
<meta name="og:type" content={type} />
<meta name="og:article:published_time" content={articleCreatedAt} />
<meta name="og:article:modified_time" content={articleUpdatedAt} />
<meta name="og:site_name" content={siteMetadata.siteName} />
<link rel="canonical" href={url} />
<link
  rel="icon"
  href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='0.9em' font-size='90'>ðŸ‘¤</text></svg>"
/>
