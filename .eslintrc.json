{
  "root": true,
  "extends": ["eslint:recommended", "plugin:astro/recommended"],
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"]
      }
    },
    {
      "files": ["*.ts", "*.js"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
