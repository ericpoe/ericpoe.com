{
  "name": "ericpoe.com",
  "description": "Code and content for ericpoe.com",
  "author": "Eric Poe <eric.poe@gmail.com>",
  "license": "MIT",
  "scripts": {
    "css": "node_modules/.bin/tailwind build ./src/components/tailwind.css -c ./tailwind-config.js -o ./src/components/index.css",
    "build": "yarn css && purgecss -c ./purgecss.config.js -o ./src/components && gatsby build",
    "develop": "yarn css && gatsby develop",
    "format": "prettier --write '**/*.js'",
    "lint": "eslint '**/*.{js,jsx}'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "gatsby": "^2.0.0",
    "gatsby-plugin-google-analytics": "^2.0.0-rc.2",
    "gatsby-plugin-manifest": "^2.0.2-rc.1",
    "gatsby-plugin-offline": "^2.0.0-rc.5",
    "gatsby-plugin-react-helmet": "^3.0.0-rc.1",
    "gatsby-plugin-sharp": "^2.0.0-rc.3",
    "gatsby-plugin-sitemap": "^2.0.0-rc.1",
    "gatsby-remark-images": "^2.0.1-rc.1",
    "gatsby-remark-prismjs": "^2.0.5",
    "gatsby-source-filesystem": "^2.0.1-rc.2",
    "gatsby-transformer-remark": "^2.1.1-rc.1",
    "prism-themes": "^1.0.1",
    "prismjs": "^1.15.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-helmet": "^5.2.0"
  },
  "devDependencies": {
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-gatsby-standard": "^2.0.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.0",
    "prettier": "^1.14.2",
    "purgecss": "^1.1.0",
    "tailwindcss": "^0.6.5"
  }
}
